{
  "name": "fireadmin",
  "version": "0.8.14",
  "description": "Application for Managing Firebase Applications. Includes support for multiple environments and data migrations.",
  "scripts": {
    "clean": "rimraf build",
    "size": "size-limit",
    "build": "react-scripts build && cp public/manifest.json build",
    "eject": "react-scripts eject",
    "start": "react-scripts start",
    "start:dist": "yarn build && firebase serve --only hosting -p 3000",
    "build:config": "firebase-ci createConfig",
    "build:testConfig": "cypress-firebase createTestEnvFile",
    "build:size": "yarn build && size-limit",
    "build:size:why": "yarn build && yarn size --why",
    "size:why": " yarn size --why",
    "deploy:functions": "firebase deploy --only functions",
    "deploy": "firebase-ci deploy -s",
    "docs:start": "yarn --cwd docs start",
    "docs:build": "yarn --cwd docs build",
    "functions:start": "yarn --cwd functions start",
    "functions:build": "yarn --cwd functions build",
    "functions:watch": "yarn --cwd functions watch",
    "functions:test": "yarn --cwd functions test",
    "functions:test:cov": "yarn --cwd functions test:cov",
    "lint": "eslint src functions cypress docs",
    "lint:functions": "eslint functions",
    "lint:app": "eslint src",
    "lint:tests": "eslint cypress",
    "lint:docs": "eslint docs",
    "lint:fix": "yarn lint --fix",
    "test": "yarn build:testConfig && cypress run",
    "test:open": "yarn build:testConfig && cypress open",
    "test:ui": "yarn build:testConfig && cypress run",
    "test:ui:open": "yarn build:testConfig && cypress open",
    "test:ui:stage": "yarn test:ui --env envName=stage",
    "test:ui:open:stage": "yarn test:ui:open --env envName=stage",
    "format": "prettier --single-quote --no-semi --trailing-comma none --write \"src/**/*.js\"",
    "pre-push": "yarn lint"
  },
  "dependencies": {
    "@material-ui/core": "^4.4.2",
    "@material-ui/icons": "^4.4.1",
    "@sentry/browser": "^5.10.1",
    "classnames": "^2.2.6",
    "date-fns": "^1.29.0",
    "firebase": "^7.2.3",
    "history": "^4.9.0",
    "lodash": "^4.17.15",
    "prop-types": "^15.7.2",
    "react": "^16.11.0",
    "react-dnd": "^2.5.4",
    "react-dnd-html5-backend": "^2.5.4",
    "react-dom": "^16.11.0",
    "react-dropzone": "^4.2.1",
    "react-ga": "^2.3.5",
    "react-google-button": "^0.7.0",
    "react-instantsearch": "^4.2.0",
    "react-loadable": "^5.5.0",
    "react-redux": "^5.0.7",
    "react-redux-firebase": "^2.5.0",
    "react-router-dom": "^4.3.1",
    "recompose": "^0.30.0",
    "redux": "^4.0.0",
    "redux-auth-wrapper": "^2.0.3",
    "redux-firestore": "^0.6.0",
    "redux-form": "^7.4.0",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1"
  },
  "devDependencies": {
    "@size-limit/preset-app": "^2.1.6",
    "@size-limit/webpack": "^2.1.6",
    "babel-eslint": "^10.0.0",
    "cypress": "^3.7.0",
    "cypress-firebase": "^0.5.1",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-chai-friendly": "^0.5.0",
    "eslint-plugin-cypress": "^2.7.0",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "firebase-ci": "^0.6.0",
    "firebase-tools": "^7.6.2",
    "husky": "^3.0.9",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "react-scripts": "3.1.1"
  },
  "eslintConfig": {
    "extends": "./eslintrc.js"
  },
  "browserslist": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prescottprue/fireadmin.git"
  },
  "engines": {
    "node": ">=10.15.3"
  },
  "author": "prescottprue (https://github.com/prescottprue)",
  "license": "MIT",
  "config": {
    "port": "3000"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  }
}
