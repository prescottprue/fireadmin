{
  "name": "@fireadmin/core",
  "version": "0.0.1",
  "main": "./bundles/index.umd.js",
  "module": "./lib/index.js",
  "es2015": "./lib/index.js",
  "typings": "./types/index.d.ts",
  "files": [
    "lib-esm",
    "lib",
    "types"
  ],
  "scripts": {
    "clean": "rimraf lib coverage",
    "build": "npm run build:lib && npm run build:esm",
    "build:typefile": "tsc --declaration --outFile index.d.ts --emitDeclarationOnly",
    "build:schema": "$(npm bin)/ts-node ./scripts/schemaToTypescript.ts",
    "build:lib": "tsc",
    "build:esm": "tsc && tsc -m es6 --outDir lib-esm",
    "lint": "eslint src/** --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "watch": "npm run build:lib -- -w",
    "prepublish": "npm run clean && npm run build && npm run build:esm",
    "pre-push": "npm run lint"
  },
  "repository": {
    "directory": "packages/core",
    "type": "git",
    "url": "https://github.com/prescottprue/fireadmin.git"
  },
  "author": "prescottprue",
  "contributors": [
    {
      "name": "prescottprue",
      "email": "sprue.dev@gmail.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/prescottprue/fireadmin/issues"
  },
  "homepage": "https://github.com/prescottprue/fireadmin",
  "dependencies": {
    "ajv": "^6.10.2",
    "firebase": "^6.3.1",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/inquirer": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^3.0.1",
    "json-schema-to-typescript": "^6.1.3",
    "prettier": "^1.18.2",
    "rimraf": "^2.5.4",
    "ts-node": "^8.3.0",
    "tslib": "^1.9.3",
    "typedoc": "0.14.2",
    "typescript": "^3.3.0",
    "typescript-tslint-plugin": "0.3.1"
  }
}
