{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": [
    {
      "target": "app",
      "public": "build",
      "ignore": [
        "**/node_modules/**",
        "firebase.json",
        "cypress.env.json",
        "serviceAccount.json",
        "*.md",
        "*.log",
        "**/.*"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        },
        {
          "source": "/docs/:page*",
          "destination": "https://fireadmin-docs.firebaseapp.com/:page",
          "type": 301
        }
      ]
    },
    {
      "target": "docs",
      "public": "docs/public",
      "ignore": [
        "*.json",
        "*.md",
        "*.log",
        "**/.*",
        "**/node_modules/**",
        "firebase.json",
        "cypress.env.json",
        "cypress.json",
        "cypress",
        "serviceAccount.json",
        "jsconfig.json",
        "Dockerfile",
        "LICENSE",
        "scripts",
        "build",
        "src"
      ]
    }
  ],
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"],
    "ignore": [
      "**/node_modules/**",
      "jsconfig.json",
      "*.md",
      "*.log",
      "**/.*",
      "LICENSE",
      "build",
      "coverage",
      "Dockerfile",
      "src",
      "test"
    ]
  },
  "emulators": {
    "database": {
      "port": 9000
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 3000
    }
  }
}
