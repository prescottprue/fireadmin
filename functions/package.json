{
  "name": "fireadmin-functions",
  "description": "Cloud Functions for Fireadmin application.",
  "scripts": {
    "test": "NODE_ENV=test mocha ./src/**/*.spec.ts",
    "test:watch": "yarn test --watch",
    "test:cov": "nyc --reporter=lcov --reporter=html yarn test",
    "test:cov:watch": "npm run test:cov -- --watch",
    "lint": "eslint -c .eslintrc.js src test",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf dist etc",
    "build": "npm run clean && tsc",
    "watch": "npm run build -- --watch",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell"
  },
  "dependencies": {
    "algoliasearch": "^4.4.0",
    "firebase-admin": "^9.1.1",
    "firebase-functions": "^3.10.0",
    "glob": "^7.1.6",
    "google-auth-library": "^6.0.6",
    "lodash": "^4.17.20",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.12",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@types/node-fetch": "^2.5.7",
    "@types/sinon": "^9.0.5",
    "@types/sinon-chai": "^3.2.4",
    "chai": "^4.2.0",
    "faux-jax": "^5.0.6",
    "firebase-functions-test": "^0.2.1",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "ts-node": "^8.10.2",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": "12"
  },
  "author": "prescottprue (https://github.com/prescottprue)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prescottprue/fireadmin.git"
  }
}
