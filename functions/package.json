{
  "name": "fireadmin-functions",
  "description": "Cloud Functions for Fireadmin application.",
  "scripts": {
    "test": "mocha ./test/unit/**",
    "test:watch": "mocha ./test/unit/** --watch",
    "test:cov": "istanbul cover $(npm bin)/_mocha ./test/unit/**",
    "test:cov:watch": "istanbul cover $(npm bin)/_mocha ./test/unit/** -- --watch",
    "lint": "eslint -c .eslintrc src test",
    "lint:fix": "npm run lint -- --fix",
    "clean": "rimraf dist etc",
    "build": "npm run clean && babel src -d --out-dir dist --retainLines",
    "watch": "npm run build -- --watch",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@google-cloud/storage": "^1.7.0",
    "algoliasearch": "^3.24.6",
    "babel-core": "^6.26.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-runtime": "^6.26.0",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.4",
    "firepad": "^1.4.0",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.2",
    "googleapis": "^23.0.0",
    "lodash": "^4.17.10",
    "mkdirp": "^0.5.1",
    "mkdirp-promise": "^5.0.1",
    "nodemailer": "^4.4.2",
    "protobufjs": "6.8.6",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "rimraf": "^2.6.2",
    "safe-eval": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.1",
    "chai": "^4.1.2",
    "faux-jax": "^5.0.6",
    "firebase-functions-test": "^0.1.3",
    "firebase-mock": "^2.2.4",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^5.2.0",
    "sinon": "^6.1.4",
    "sinon-chai": "^3.2.0"
  },
  "engines": {
    "node": "8"
  },
  "author": "prescottprue (https://github.com/prescottprue)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prescottprue/fireadmin.git"
  }
}
