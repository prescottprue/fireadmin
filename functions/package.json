{
  "name": "fireadmin-functions",
  "description": "Cloud Functions for Fireadmin application.",
  "scripts": {
    "test": "npm run build && mocha -R spec ./test/unit/**",
    "test:cov": "istanbul cover ./node_modules/mocha/bin/_mocha ./test/unit/**",
    "lint": "eslint -c .eslintrc ./src",
    "clean": "rimraf dist etc",
    "build": "npm run clean && babel src -d --out-dir dist",
    "watch": "npm run build -- --watch",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase experimental:functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@google-cloud/storage": "^1.6.0",
    "algoliasearch": "^3.24.6",
    "babel-core": "^6.26.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-runtime": "^6.26.0",
    "firebase-admin": "^5.12.0",
    "firebase-functions": "1.0.4",
    "firepad": "^1.4.0",
    "fs-extra": "^4.0.2",
    "glob": "^7.1.2",
    "googleapis": "^23.0.0",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "mkdirp-promise": "^5.0.1",
    "nodemailer": "^4.4.2",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "rimraf": "^2.6.2",
    "safe-eval": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.1",
    "chai": "^4.1.2",
    "firebase-functions-test": "^0.1.1",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^5.0.4",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.2"
  }
}
